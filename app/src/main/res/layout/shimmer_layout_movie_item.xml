<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_poster_path_movie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/poster_path_movie"
            android:layout_width="166dp"
            android:layout_height="250dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:background="@color/the_gray" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:ellipsize="end"
        android:background="@color/the_gray"
        android:fontFamily="@font/poppins"
        android:maxLines="1"
        android:textColor="@color/the_blue_dark5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/card_poster_path_movie"
        app:layout_constraintStart_toStartOf="@id/card_poster_path_movie"
        app:layout_constraintTop_toBottomOf="@id/card_poster_path_movie"
        tools:text="Spider Man" />

</androidx.constraintlayout.widget.ConstraintLayout>